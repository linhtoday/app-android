<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:id="@+id/chat_head_root"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--Profile image for the chat head.-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_below="@id/close_btn"
        android:id="@+id/chat_head_profile_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_tron"

        />


    <!--<ImageView-->
        <!--android:layout_below="@id/close_btn"-->
        <!--android:id="@+id/chat_head_profile_iv"-->
        <!--android:layout_width="60dp"-->
        <!--android:layout_height="60dp"-->
        <!--android:layout_marginTop="8dp"-->
        <!--android:src="@drawable/ic_tron"-->
        <!--tools:ignore="ContentDescription"/>-->
    <!--Close button-->

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:id="@+id/ll_bubble_message"
        android:layout_toRightOf="@id/chat_head_profile_iv"
        android:layout_marginTop="15dp"
        android:layout_below="@id/close_btn"
        android:layout_width="wrap_content"
        android:background="@drawable/bound_message"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/ll_bubble_message"
            android:fontFamily="monospace"
            android:gravity="center"
            android:maxLines="1"
            android:padding="5dp"
            android:text="o lalal ai the"
            android:textColor="#ffff"
            android:textSize="20sp" />
    </LinearLayout>


    <ImageView


        android:id="@+id/close_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="-24dp"

        android:layout_toEndOf="@id/chat_head_profile_iv"
        android:src="@drawable/ic_close_trang"
        tools:ignore="ContentDescription" />


    <LinearLayout
        android:gravity="center"
        android:background="@drawable/background_circle"
        android:layout_below="@id/chat_head_profile_iv"
        android:layout_marginTop="-20dp"
        android:layout_alignEnd="@id/chat_head_profile_iv"
        android:layout_width="30dp"
        android:layout_height="30dp">

        <TextView
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:text="1"
            android:id="@+id/cnt_mess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>






</RelativeLayout>