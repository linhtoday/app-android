<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView

    android:layout_margin="5dp"
    android:id="@+id/ll_user_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView

            android:src="@drawable/ic_account_circle_24dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/user_chat_item_avt"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:civ_border_width="10dp"
            app:civ_border_color="#05df29"

            android:visibility="gone"
            android:id="@+id/img_on"
            android:src="@mipmap/ic_launcher"

            android:layout_below="@+id/user_chat_item_avt"
            android:layout_marginTop="-15dp"
            android:layout_marginLeft="-15dp"
            android:layout_toRightOf="@id/user_chat_item_avt"
            android:layout_toEndOf="@id/user_chat_item_avt"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:civ_border_width="10dp"
            app:civ_border_color="#bfbfbf"

            android:id="@+id/img_off"
            android:src="@mipmap/ic_launcher"

            android:layout_below="@+id/user_chat_item_avt"
            android:layout_marginTop="-15dp"
            android:layout_marginLeft="-15dp"
            android:layout_toRightOf="@id/user_chat_item_avt"
            android:layout_toEndOf="@id/user_chat_item_avt"/>

    </RelativeLayout>

    <RelativeLayout



        android:layout_gravity="center_vertical"

        android:layout_toRightOf="@id/user_chat_item_avt"
        android:layout_toEndOf="@id/user_chat_item_avt"
        android:layout_marginLeft="70dp"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:id="@+id/user_chat_item_username"
            android:textSize="22sp"
            android:text="user name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@id/user_chat_item_username"
            android:id="@+id/user_chat_item_text"
            android:textSize="16sp"
            android:text="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

